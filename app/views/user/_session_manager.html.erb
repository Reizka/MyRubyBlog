<% if current_user %>
  <li class="nav-item">
    <a class="nav-link text-bold bg-white rounded px-2 py-1 mx-1" href="#">
      <%= current_user.username %>
    </a>
  </li>
    <li class="nav-item">
    <%= link_to "Edit account", edit_user_registration_path, class: "nav-link bg-white rounded px-2 py-1 mx-1 d-inline-block fw-bold" %>
