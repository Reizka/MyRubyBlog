    <li class="nav-item">
    <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-link bg-white rounded px-2 py-1 mx-1 d-inline-block text-dark fw-bold', form: { class: "d-inline" }, style: "text-decoration: none;" %>
