<div class="flex flex-col items-center"> 
  <h1 class="text-3xl font-bold underline text-center my-4">Articles</h1>
  <p class="text-sm mb-4">Our blog has <%= Article.public_count %> articles and counting!</p>



  <div class="w-full flex justify-start mt-4">
    <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
      <%= link_to "New Article", new_article_path %>
    </button>
  </div>
</div>

 <div class="flex flex-col grid grid-cols-3 gap-4">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <div class="border p-2 rounded  flex justify-center items-center">
          <%= link_to article.title, article %>
        </div>
      <% end %>
    <% end %>
  </div>