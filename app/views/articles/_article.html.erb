<div class="container mt-4">
  <div class="border border-2 shadow-sm p-3 mb-5 bg-white rounded">
    <h1 class="mb-3 title-underline"><%= article.title %></h1>
    <div class="mb-3">
      <p class="lead"><%= article.body %></p>
      <% article.tags.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
    </div>
    <p class="mb-1 text-muted">Posted by <%= link_to article.user.full_name, user_path(article.user) %></p>
    <p class="badge bg-secondary"><%= article.status.capitalize %></p>
  </div>
</div>
